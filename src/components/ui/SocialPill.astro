---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  target='_blank'
  rel='noopener noreferrer'
  class='text-md group inline-flex max-w-fit items-center justify-center gap-2 rounded-full border border-gray-600 bg-gray-800 px-4 py-2 text-white transition hover:border-gray-700 hover:bg-gray-900 hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-yellow-500/80 focus-visible:ring-offset-2 active:bg-black'
>
  <slot />
</a>
