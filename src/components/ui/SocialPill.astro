---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  target='_blank'
  rel='noopener noreferrer'
  class='flex items-center justify-center gap-x-2 rounded-full border border-white/10 bg-slate-950 px-2 py-1 text-xs transition hover:scale-110 hover:bg-slate-900 lg:px-4 lg:py-2 lg:text-base'
>
  <slot />
</a>
