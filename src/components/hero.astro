---
import Badge from '@components/ui/badge.astro';
import SocialPill from '@components/ui/social-pill.astro';
import DownloadIcon from '@icons/download-icon.astro';
import GithubIcon from '@icons/github-icon.astro';
import LinkedInIcon from '@icons/linkedin-icon.astro';
---

<div class='max-w-2xl'>
  <div class='mb-4 flex gap-4'>
    <img class='size-16 rounded-full shadow-lg' src='/profile.webp' alt='Javier Valero' />
    <a
      href='https://linkedin.com/in/javalce'
      target='_blank'
      rel='noopener noreferrer'
      class='flex items-center transition md:justify-center md:hover:scale-105'
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1 class='text-4xl font-bold tracking-tight text-white sm:text-5xl'>Hey, soy Javier Valero</h1>
  <p
    class='mt-6 max-w-lg text-xl text-gray-300 [&>strong]:font-semibold [&>strong]:text-yellow-200'
  >
    +2 años de experiencia. <strong>Desarrollador Web Full Stack</strong> de Valencia, España. Especializado
    en el desarrollo de aplicaciones para la visualización de datos.
  </p>
  <nav class='mt-8 flex flex-wrap gap-4'>
    <SocialPill href='https://linkedin.com/in/javalce'>
      <LinkedInIcon class='size-4' />
      LinkedIn
    </SocialPill>
    <SocialPill href='https://github.com/javalce'>
      <GithubIcon class='size-4' />
      GitHub
    </SocialPill>
    <SocialPill href='/CV_Javier_Valero_Cejudo.pdf'>
      <DownloadIcon /> Descargar CV
    </SocialPill>
  </nav>
</div>
