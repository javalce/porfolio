---
interface Props {
  href: string;
  name: string;
}

const { href, name } = Astro.props;
---

<a
  href={href}
  target='_blank'
  rel='noopener noreferrer'
  class='hover:bg-primary flex size-10 items-center justify-center rounded-lg border transition-all duration-150 hover:-translate-y-0.5'
  title={name}
  aria-label={name}
>
  <slot />
</a>
