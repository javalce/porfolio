---
import About from '@components/About.astro';
import Experience from '@components/Experience.astro';
import Hero from '@components/Hero.astro';
import Projects from '@components/Projects.astro';
import SectionContainer from '@components/ui/SectionContainer.astro';
import BriefcaseIcon from '@icons/BriefcaseIcon.astro';
import CodeIcon from '@icons/CodeIcon.astro';
import ProfileIcon from '@icons/ProfileIcon.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout
  title='Porfolio de javalce - Desarrollador y Programador Web con 2 años de expediencia'
  descripcion='Contrata a javalce para crear tu aplicación web. Desarrollador Web Full Stack. Especializado en crear aplicaciones para la visualización de datos.'
>
  <main class='px-4'>
    <SectionContainer class='py-44 pb-24'>
      <Hero />
    </SectionContainer>

    <SectionContainer id='experience'>
      <h2 class='mb-6 flex items-center gap-x-3 text-3xl font-semibold'>
        <BriefcaseIcon class='size-7' /> Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id='projects'>
      <h2 class='mb-6 flex items-center gap-x-3 text-3xl font-semibold'>
        <CodeIcon class='size-7' /> Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id='about'>
      <h2 class='mb-6 flex items-center gap-x-3 text-3xl font-semibold'>
        <ProfileIcon class='size-7' /> Sobre mí
      </h2>
      <About />
    </SectionContainer>
  </main>
</Layout>
